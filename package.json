{
	"name": "rabtx",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"test:projects": "vitest run",
		"test:projects:watch": "vitest --watch",
		"test:e2e": "turbo run test:e2e",
		"test:e2e:ui": "turbo run test:e2e:ui",
		"test:e2e:debug": "turbo run test:e2e:debug",
		"test:e2e:report": "turbo run test:e2e:report",
		"storybook": "turbo run storybook",
		"build-storybook": "turbo run build-storybook",
		"clean": "turbo run clean && rm -rf node_modules",
		"prepare": "lefthook install",
		"commit": "cz",
		"deps:update": "bun update --latest",
		"deps:check": "bun npm-check-updates",
		"manypkg": "manypkg check",
		"knip": "knip"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/cli": "2.29.7",
		"@rabtx/vitest-config": "workspace:*",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@commitlint/cz-commitlint": "20.1.0",
		"@manypkg/cli": "0.25.1",
		"@playwright/test": "1.55.1",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@types/bun": "1.2.23",
		"@rabtx/tsconfig": "workspace:*",
		"commitizen": "4.3.1",
		"knip": "5.64.3",
		"lefthook": "1.13.6",
		"npm-check-updates": "19.0.0",
		"rimraf": "6.0.1",
		"semantic-release": "24.2.9",
		"turbo": "2.5.8",
		"typescript": "5.9.3",
		"ultracite": "5.5.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"preset": "conventionalcommits"
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			"@semantic-release/git",
			"@semantic-release/github"
		]
	},
	"packageManager": "bun@1.2.10",
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"core-js",
		"core-js-pure",
		"next-ts-template",
		"oxc-resolver"
	],
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.2.10",
		"pnpm": ">=10.0.0"
	},
	"author": {
		"name": "Shabir Khan",
		"email": "shabirkhan.dev@gamil.com",
		"url": "https://shabirkhan.dev"
	},
	"mcpServers": {
		"ultracite": {
			"command": "npx",
			"args": [
				"-y",
				"mcp-remote",
				"https://www.ultracite.ai/api/mcp/mcp"
			]
		}
	}
}
